# Server port
PORT=3000

# MongoDB connection string
MONGO_URI=mongodb://localhost:27017/hospital-management-system

# JWT Secret Key for token generation (make sure this is kept secure)
JWT_SECRET=your_jwt_secret_key

# Session Secret for session management
SESSION_SECRET=your_session_secret_key

# Hospital Management API configuration
API_URL=http://localhost:3000

# Admin default credentials (for the initial setup)
ADMIN_EMAIL=admin@hospitalmanagement.com
ADMIN_PASSWORD=admin123

# Optional: OAuth credentials for external services (if you're planning to use Google/Facebook login)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
FACEBOOK_CLIENT_ID=your_facebook_client_id
FACEBOOK_CLIENT_SECRET=your_facebook_client_secret
